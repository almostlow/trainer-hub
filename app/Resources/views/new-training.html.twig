{% extends 'base.html.twig' %}

{% block body %}
    {% trans_default_domain 'FOSUserBundle' %}

    {{ form_start(trainingForm, { 'action': path('new_training'), 'attr': { 'class': 'fos_user_profile_edit', 'novalidate' : 'novalidate' } }) }}

    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-login">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3"></div>
                            <div class="col-xs-6">
                                Nauja treniruote
                            </div>
                            <div class="col-xs-3"></div>
                        </div>
                        <hr>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group" id="fos_user_registration_form">
                                    {{ form_widget(trainingForm.title, { 'attr': {'class': 'form-control', 'placeholder': 'Pavadinimas' } }) }}
                                </div>
                                {% if form_errors(trainingForm.title) %}
                                <div class="alert alert-danger alert-dismissable">
                                    <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
                                    {{ form_errors(trainingForm.title) }}
                                </div>
                                {% endif %}
                                <div class="form-group" id="fos_user_registration_form">
                                    {{ form_widget(trainingForm.price, { 'attr': {'class': 'form-control', 'placeholder': 'Kaina' } }) }}
                                </div>
                                {% if form_errors(trainingForm.price) %}
                                <div class="alert alert-danger alert-dismissable">
                                    <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
                                    {{ form_errors(trainingForm.price) }}
                                </div>
                                {% endif %}
                                <div class="form-group" id="fos_user_registration_form">
                                    {{ form_widget(trainingForm.description, { 'attr': {'class': 'form-control', 'placeholder': 'Aprašymas' } }) }}
                                </div>
                                {% if form_errors(trainingForm.description) %}
                                <div class="alert alert-danger alert-dismissable">
                                    <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
                                    {{ form_errors(trainingForm.description) }}
                                </div>
                                {% endif %}
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-6 col-sm-offset-3">
                                        <input type="submit" value="Įkelti" class="form-control btn btn-register"/>
                                    </div>
                                </div>
                            </div>
                            {{ form_end(trainingForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

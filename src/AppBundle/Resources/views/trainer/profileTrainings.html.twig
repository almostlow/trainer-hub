{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="user-area">
            <nav class="user-menu">
                <div>
                    {{ include('@App/myProfileTabs.html.twig', {'active': 'trainings'}) }}
                </div>
            </nav>

        </div>
        <div class="user-block">
            <div class="page-header no-margin padding">Mano Treniruotės</div>

                <table class="table">
                    <thead style="color: #868686; background-color: #f0f0f0; text-transform: uppercase;">
                    <th>Pavadinimas</th>
                    <th>Kaina (€)</th>
                    <th>Kategorija</th>
                    <th>Miestas</th>
                    <th>Veiksmas</th>
                    </thead>
                    <tbody>
                    {% for training in trainings %}
                        <tr>
                            <td>{{ training.title }}</td>
                            <td>{{ training.price }}</td>
                            <td>{{ training.category.title }}</td>
                            <td>{{ training.city.title }}</td>
                            <td>
                                <a href="training/edit/{{ training.id }}">
                                    <button class="form-control btn btn-login">Redaguoti</button>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
        </div>
    </div>
{% endblock %}

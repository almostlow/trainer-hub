{% form_theme feedback 'bootstrap_3_layout.html.twig' %}
{% extends 'base.html.twig' %}

{% block body %}
    <div class="container spacer">
        <div class="row">
            <div class="col-md-4">
                <img src="{{ asset('media/cache/my_heighten_filter/uploads/avatars/' ~ trainers.avatarName ) }}" class="img-responsive"/>
            </div>
            <div class="col-md-8">
                <strong>Vardas: </strong>{{ trainers.name }} <br>
                <strong>Pavardė: </strong>{{ trainers.surname }} <br>
                <strong>Miestas: </strong>{{ trainers.city }} <br>
                <strong>Telefonas: </strong>{{ trainers.phone }} <br>
                <strong>Aprašymas: </strong><br>{{ trainers.description }} <br>
                <h3>Mano treniruotės</h3>
                <table class="table table-bordered table-striped">
                    <thead>
                        <th>Pavadinimas</th>
                        <th>Kaina (€)</th>
                        <th>Kategorija</th>
                        <th>Miestas</th>
                        <th>Veiksmas</th>
                    </thead>
                    <tbody>
                        {% for training in trainers.training %}
                            <tr>
                                <td>{{ training.title }}</td>
                                <td>{{ training.price }}</td>
                                <td>{{ training.category.title }}</td>
                                <td>{{ training.city.title }}</td>
                                <td style="text-align: center;">
                                    <a href="reservate/{{ training.id }}">
                                        <button class="btn btn-reservation">Rezervuoti</button>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <h3>Atsiliepimai</h3>
                {% if feedbacks is defined and feedbacks is not empty %}
                    {% for feedback in feedbacks %}
                    <div class="testimonials">
                        <div class="active item">
                            <blockquote><p>{{ feedback.feedback }}</p></blockquote>
                            <div class="carousel-info">

                                <div class="pull-right">
                                    <span class="testimonials-name">{{ feedback.fos_user_author.username }}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                {% else %}
                    <p>Atsiliepimų nėra. </p>
                {% endif %}
                {% if is_granted('ROLE_CLIENT') %}
                    {{ form_start(feedback, {'attr' : {'novalidate' : 'novalidate', 'class' : 'feedback'}}) }}

                    {{ form_rest(feedback) }}

                     <input type="submit" value="Palikti atsiliepimą" class="form-control btn btn-feedback"/>

                    {{ form_end(feedback) }}
                {% elseif is_granted('ROLE_TRAINER') %}

                {% else %}
                    <p>Norėdami parašyti atsiliepimą privalote <a href="{{ path('fos_user_security_login') }}">prisijungti</a></p>
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}
